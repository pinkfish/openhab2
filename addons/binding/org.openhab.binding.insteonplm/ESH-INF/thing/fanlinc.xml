<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="insteonplm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
    xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <thing-type id="fanlinc" listed="false">
        <supported-bridge-type-refs>
            <bridge-type-ref id="bridge" />
        </supported-bridge-type-refs>

        <label>FanLinc</label>
        <description>FanLinc fan/light control</description>

        <channels>
            <channel id="dimmer" typeId="dimmer">
                <properties>
                    <property name="feature">GenericDimmer</property>
                    <property name="pollHandler">FlexPollHandler:extendedNone,0x19,0x00</property>
                </properties>
            </channel>
            <channel id="fan" typeId="fanLevel">
                <properties>
                    <property name="feature">FanLincFan</property>
                    <property name="pollHandler">FlexPollHandler:extendedNone,0x19,0x03</property>
                </properties>
            </channel>
            <channel id="lastHeardFrom" typeId="lastHeardFrom" />
            <channel id="pendingWrite" typeId="pendingWrite" />
            <channel id="successfulySent" typeId="successfulySent" />
            <channel id="errorSent" typeId="errorSent" />
        </channels>

        <properties>
            <property name="productKey">0x00001C</property>
            <property name="model">2475F</property>
            <property name="deviceCategory">0x01</property>
            <property name="deviceSubCategory">0x2E</property>
        </properties>
    </thing-type>
</thing:thing-descriptions>