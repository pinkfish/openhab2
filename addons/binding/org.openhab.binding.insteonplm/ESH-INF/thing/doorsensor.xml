<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="insteonplm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
    xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">
    
    <thing-type id="doorsensor" listed="false">
        <supported-bridge-type-refs>
            <bridge-type-ref id="bridge" />
        </supported-bridge-type-refs>

        <label>Door Sensor</label>
        <description>Hidden door sensor</description>

        <channels>
            <channel id="contact" typeId="contact">
	            <properties>
	                <property name="feature">WirelessMotionSensorContact</property>
	            </properties>
            </channel>
            <channel id="batteryLevel" typeId="battery">
                <properties>
                    <property name="feature">WirelessMotionSensorDataBatteryLevel</property>
                </properties>
            </channel>
            <channel id="batteryWatermark" typeId="batteryWatermark">
                <properties>
                    <property name="feature">WirelessMotionSensorDataBatteryWatermark</property>
                </properties>
            </channel>
            <channel id="lastHeardFrom" typeId="lastHeardFrom" />
            <channel id="pendingWrite" typeId="pendingWrite" />
            <channel id="successfulySent" typeId="successfulySent" />
            <channel id="errorSent" typeId="errorSent" />
        </channels>
        
        <properties>
            <property name="productKey">0x000003</property>
            <property name="model">2845-222</property>
            <property name="deviceCategory">0x10</property>
            <property name="deviceSubCategory">0x11,0x14,0x15</property>
        </properties>
    </thing-type>
</thing:thing-descriptions>