	                <property name="feature">BottomOutlet</property>
	            </properties>
            </channel>
            <channel id="lastHeardFrom" typeId="lastHeardFrom" />
            <channel id="pendingWrite" typeId="pendingWrite" />
            <channel id="successfulySent" typeId="successfulySent" />
            <channel id="errorSent" typeId="errorSent" />
        </channels>
        
        <properties>
            <property name="productKey">0x000039</property>
            <property name="deviceCategory">0x02</property>
            <property name="deviceSubCategory">0x08</property>
