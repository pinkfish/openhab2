        <label>On/Off Outlet</label>
        <description>On/Off Outlet</description>

        <channels>
            <channel id="topOutlet" typeId="switch">
	            <properties>
	                <property name="feature">GenericSwitch</property>
                    <property name="pollHandler">FlexPollHandler:extendedNone,0x19,0x00</property>
	            </properties>
            </channel>
            <channel id="bottomOutlet" typeId="switch">
