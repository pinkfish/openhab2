<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="elkalarm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">
	<thing-type id="item">
		<label>ELK M1 zone</label>
		<channels>
			<channel typeId="contact" id="alarmed">
				<label>Alarmed</label>
				<description>If the m1 zone is an alarm state</description>
			</channel>
			<channel typeId="zone" id="zone">
				<label>Zone state</label>
				<description>The m1 zone, shows if it is open/closed or unknown in state</description>
			</channel>
			<channel typeId="zoneConfig" id="config">
				<label>M1 zone</label>
				<description>The m1 zone, shows if it is open/closed or unknown in state</description>
			</channel>
		</channels>
	</thing-type>

	<channel-type id="alarmed">
		<item-type>Contact</item-type>
		<label>Alarmed</label>
		<state readOnly="false">
		</state>
	</channel-type>

	<channel-type id="zone">
		<item-type>String</item-type>
		<label>M1 zone</label>
		<state readOnly="false">
			<options>
				<option value="Normal">Open</option>
				<option value="Trouble">EOL</option>
				<option value="Violated">Short</option>
				<option value="Bypassed">Unconfigured</option>
				<option value="Invalid">Invalid</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="zoneConfig">
		<item-type>String</item-type>
		<label>M1 config</label>
		<state readOnly="false">
			<options>
				<option value="Open">Open</option>
				<option value="EOL">EOL</option>
				<option value="Short">Short</option>
				<option value="Unconfigured">Unconfigured</option>
				<option value="Invalid">Invalid</option>
			</options>
		</state>
	</channel-type>
</thing:thing-descriptions>